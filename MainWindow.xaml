<Window x:Class="GuessWhat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuessWhat"
        xmlns:viewmodel="clr-namespace:GuessWhat.ViewModels" 
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewmodel:GameViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Guess the number between 1 and 100" FontWeight="Bold"/>
            <TextBox Text="{Binding Guess, UpdateSourceTrigger=PropertyChanged}" Width="100 " Margin="0 10"/>
            <Button Content="Check"  Command="{Binding CheckGuessCommand}" Width="100" Margin="0 10"/>
            <TextBlock Text="{Binding Feedback, Mode=TwoWay}" FontWeight="Bold" Margin="0 10"/>
            <Button Content="Repeat" Command="{Binding StartNewGameCommand}" Width="100" Margin="0 10" Click="Repeat_Click"/>
        </StackPanel>

    </Grid>
</Window>
